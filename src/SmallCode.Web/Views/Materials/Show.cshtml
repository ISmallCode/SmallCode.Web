
@model SmallCode.Web.Models.ViewModels.MaterialsViewModel
@{
    ViewBag.Title = Model.Title;
}

<div class="container top-0-8">
    <div class="row">
        <div class="col-md-9">
            <article class="blog-post">
                <div class="post-head">
                    <h1 class="post-title"><a href="/Materials/Show/@Model.Id">@Model.Title</a></h1>
                    <div class="post-meta">
                        <span class="author">作者：<a href="/User/Show/@Model.CreateBy">@Model.CreateUserName</a></span> •
                        <time class="post-date" datetime="@Model.CreateDate" title="@Model.CreateDate">@Model.CreateDate</time> •
                        <span class="browser">访问量：@Model.Browses</span>
                    </div>
                </div>
                <div class="post-content">
                    @Model.Description
                </div>
                <div class="post-permalink">
                    <a href="/Materials/Show/@Model.Id" class="btn btn-success" target="_blank">阅读全文</a>
                </div>
                <footer class="post-footer clearfix">
                    <div class="pull-left tag-list">
                        <i class="glyphicon glyphicon-folder-open"></i>
                        <a href="?Category=z-Coding&amp;Date=">z-Coding</a>
                    </div>
                    <div class="pull-right share">
                    </div>
                </footer>
            </article>
            <div class="news_pl">
                <h2>文章评论</h2>
                <!-- 多说评论框 start -->
                <div class="ds-thread" data-thread-key="@Model.Id" data-title="@Model.Title" data-url="@Context.Request.Host.ToString()@Context.Request.Path"></div>
                <!-- 多说评论框 end -->
                <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
                <script type="text/javascript">
                    var duoshuoQuery = { short_name: "lennyblog" };
                    (function () {
                        var ds = document.createElement('script');
                        ds.type = 'text/javascript'; ds.async = true;
                        ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
                        ds.charset = 'UTF-8';
                        (document.getElementsByTagName('head')[0]
                         || document.getElementsByTagName('body')[0]).appendChild(ds);
                    })();
                </script>
                <!-- 多说公共JS代码 end -->
            </div>
        </div>
        <div class="col-md-3">
            @Html.Partial("_MaterialsSidebarPartial")
        </div>
    </div>
    
</div>