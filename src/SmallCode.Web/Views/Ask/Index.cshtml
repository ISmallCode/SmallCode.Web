@using SmallCode.Web.Models.ViewModels;
@model SmallCode.Pager.PagedList<TopicViewModel>
@using SmallCode.Pager;

@{
            ViewBag.Title = "博客";
}
<link href="~/styles/page.css" rel="stylesheet" />
<div class="container top-0-8">
    <div class="row">
        <div class="col-md-9 panel-body widget">
            @foreach (var item in Model.PageListData)
            {
                <div class="topic ">
                    <div class="avatar right-0-1">
                        <a href="#"><img class="avatar-48" src="/img/96.png" alt="96"></a>
                    </div>
                    <div class="media-body">
                        <div class="title">
                            <a href="/Ask/Show/@item.Id">
                                @item.Title
                            </a>
                        </div>
                        <div class="info">
                            @item.NodeName 【<label>@item.UserName</label>】发布于 @item.CreateDate
                            @if (item.ReplyCount > 0)
                            {
                                <label>最后回复 @item.LastReplyDate</label>
                            }
                        </div>
                    </div>
                    <div class="count media-right">
                        <a class="state-false" href="/Topic/1290#reply1">@item.ReplyCount</a>
                    </div>
                </div>
            }
            @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new { pageIndex }))
        </div>
        <aside class="col-md-3">
            <div class="blog-widget">
                <a href="/Ask/Publish" class="btn btn-primary"><strong>我要发布</strong></a>
            </div>
            <div class="blog-widget">
                <h4 class="title">最近热门<a href="/Blog/Index?Date=" class="pull-right">{100}</a></h4>
                <div class="content tag-cloud">
                    <a class="list-group-item" href="/Blog/Index?Category=z-Coding&amp;Date=">z-Coding</a>
                    <a class="list-group-item" href="/Blog/Index?Category=Python&amp;Date=">Python</a>
                    <a class="list-group-item" href="/Blog/Index?Category=Markdown&amp;Date=">Markdown</a>
                    <a class="list-group-item" href="/Blog/Index?Category=Java&amp;Date=">Java</a>
                    <a class="list-group-item" href="/Blog/Index?Category=生活感悟&amp;Date=">生活感悟</a>
                    <a class="list-group-item" href="/Blog/Index?Category=Hdfs&amp;Date=">Hdfs</a>
                    <a class="list-group-item" href="/Blog/Index?Category=MapReduce&amp;Date=">MapReduce</a>
                    <a class="list-group-item" href="/Blog/Index?Category=.Net&amp;Date=">.Net</a>
                    <a class="list-group-item" href="/Blog/Index?Category=大数据&amp;Date=">大数据</a>
                    <a class="list-group-item" href="/Blog/Index?Category=Hadoop&amp;Date=">Hadoop</a>
                </div>
            </div>
        </aside>
    </div>
</div>