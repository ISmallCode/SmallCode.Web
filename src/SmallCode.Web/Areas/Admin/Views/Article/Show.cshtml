@model SmallCode.Web.Models.ViewModels.ArticleViewModel

@{
    Layout = "~/Areas/Admin/Views/shared/_LayoutPart.cshtml";
}
<div class="gray-bg wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>展示博客</h5>
                </div>
                <div class="ibox-content">
                    <form method="post" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">名称</label>
                            <div class="col-sm-10">
                               @Model.Title
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group" id="dvDescription">
                            <label class="col-sm-2 control-label">描述</label>
                            <div class="col-sm-10">
                                @Html.Raw(Model.Description)    
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">分类</label>
                            <div class="col-sm-10">
                               @Model.Category
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-white" type="button" onclick="history.go(-1)">返回</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>